<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:padding="8dp">

        <!-- Alumbrado -->
        <LinearLayout
            android:id="@+id/btnAlumbrado"
            style="@style/TableroButtonContainer"
            android:backgroundTint="#FFC107">

            <ImageView
                style="@style/TableroButtonIcon"
                android:src="@drawable/encalumbrado"
                android:contentDescription="Alumbrado" />

            <TextView
                style="@style/TableroButtonText"
                android:text="ALUMBRADO" />
        </LinearLayout>

        <!-- Calles -->
        <LinearLayout
            android:id="@+id/btnCalles"
            style="@style/TableroButtonContainer"
            android:backgroundTint="#9E9E9E">

            <ImageView
                style="@style/TableroButtonIcon"
                android:src="@drawable/calles_sn"
                android:contentDescription="Calles" />

            <TextView
                style="@style/TableroButtonText"
                android:text="CALLES" />
        </LinearLayout>

        <!-- MIAA / Agua -->
        <LinearLayout
            android:id="@+id/btnMIAA"
            style="@style/TableroButtonContainer"
            android:backgroundTint="#03A9F4">

            <ImageView
                style="@style/TableroButtonIcon"
                android:src="@drawable/aguaenc"
                android:contentDescription="Agua MIAA" />

            <TextView
                style="@style/TableroButtonText"
                android:text="MIAA" />
        </LinearLayout>

        <!-- Apoyos -->
        <LinearLayout
            android:id="@+id/btnApoyos"
            style="@style/TableroButtonContainer"
            android:backgroundTint="#E91E63">

            <ImageView
                style="@style/TableroButtonIcon"
                android:src="@drawable/encapoyos"
                android:contentDescription="Apoyos" />

            <TextView
                style="@style/TableroButtonText"
                android:text="APOYOS" />
        </LinearLayout>

        <!-- Parques y Jardines -->
        <LinearLayout
            android:id="@+id/btnParques"
            style="@style/TableroButtonContainer"
            android:backgroundTint="#4CAF50">

            <ImageView
                style="@style/TableroButtonIcon"
                android:src="@drawable/encparques_y_jardines"
                android:contentDescription="Parques" />

            <TextView
                style="@style/TableroButtonText"
                android:text="PARQUES Y JARDINES" />
        </LinearLayout>

        <!-- Ciudad -->
        <LinearLayout
            android:id="@+id/btnCiudad"
            style="@style/TableroButtonContainer"
            android:backgroundTint="#FF8A65">

            <ImageView
                style="@style/TableroButtonIcon"
                android:src="@drawable/encciudad"
                android:contentDescription="Ciudad" />

            <TextView
                style="@style/TableroButtonText"
                android:text="CIUDAD" />
        </LinearLayout>

        <!-- Convivencia -->
        <LinearLayout
            android:id="@+id/btnConvivencia"
            style="@style/TableroButtonContainer"
            android:backgroundTint="#607D8B">

            <ImageView
                style="@style/TableroButtonIcon"
                android:src="@drawable/enccovivencia"
                android:contentDescription="Convivencia" />

            <TextView
                style="@style/TableroButtonText"
                android:text="CONVIVENCIA" />
        </LinearLayout>

        <!-- Vigilancia -->
        <LinearLayout
            android:id="@+id/btnVigilancia"
            style="@style/TableroButtonContainer"
            android:backgroundTint="#B71C1C">

            <ImageView
                style="@style/TableroButtonIcon"
                android:src="@drawable/encvigilancia"
                android:contentDescription="Vigilancia" />

            <TextView
                style="@style/TableroButtonText"
                android:text="VIGILANCIA" />
        </LinearLayout>

        <!-- Limpia -->
        <LinearLayout
            android:id="@+id/btnLimpia"
            style="@style/TableroButtonContainer"
            android:backgroundTint="#673AB7">

            <ImageView
                style="@style/TableroButtonIcon"
                android:src="@drawable/enclimpieza"
                android:contentDescription="Limpia" />

            <TextView
                style="@style/TableroButtonText"
                android:text="LIMPIA" />
        </LinearLayout>

        <!-- Otros -->
        <LinearLayout
            android:id="@+id/btnOtros"
            style="@style/TableroButtonContainer"
            android:backgroundTint="#FF9800">

            <ImageView
                style="@style/TableroButtonIcon"
                android:src="@drawable/otros"
                android:contentDescription="Otros" />

            <TextView
                style="@style/TableroButtonText"
                android:text="OTROS" />
        </LinearLayout>

    </GridLayout>
</ScrollView>


