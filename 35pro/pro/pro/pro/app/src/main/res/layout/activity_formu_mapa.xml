        </LinearLayout>
    </HorizontalScrollView>

    <!-- ðŸ”¹ Contenido desplazable del formulario -->
    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:padding="24dp">

        <LinearLayout
            android:id="@+id/formulario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Campos de entrada -->
            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre completo"
                android:inputType="textPersonName"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="TelÃ©fono"
                android:inputType="phone"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etFraccionamiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fraccionamiento"
                android:inputType="text"
                android:layout_marginBottom="16dp" />

            <!-- ðŸ”¹ Google Map justo despuÃ©s de Fraccionamiento -->
            <fragment
                android:id="@+id/mapFragment"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp" />

            <!-- Resto de campos -->
            <AutoCompleteTextView
                android:id="@+id/actvReportType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipo de reporte"
                android:inputType="text"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etDescripcion"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="DescripciÃ³n del problema"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:layout_marginBottom="16dp" />

            <!-- Multimedia selector -->
            <LinearLayout
                android:id="@+id/layoutFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/ivThumbnail"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:tint="#1E88E5" />

                <TextView
                    android:id="@+id/tvAddMedia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agregar / tomar foto, video, audio o PDF"
                    android:textStyle="bold"
                    android:textColor="#1E88E5"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Contenedores multimedia -->
            <!-- Fotos -->
            <TextView
                android:id="@+id/tvGalleryLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fotos y videos aÃ±adidos"
                android:textStyle="bold"
                android:textColor="#1E88E5"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:visibility="gone" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:scrollbars="none"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/imageContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp" />
            </HorizontalScrollView>

            <!-- Audios -->
            <TextView
                android:id="@+id/tvAudioLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Audios aÃ±adidos"
                android:textStyle="bold"
                android:textColor="#1E88E5"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/audioContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:visibility="gone" />

            <!-- PDFs -->
            <TextView
                android:id="@+id/tvPdfLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Archivos PDF aÃ±adidos"
                android:textStyle="bold"
                android:textColor="#1E88E5"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/pdfContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <!-- ðŸ”¹ BotÃ³n enviar -->
    <LinearLayout
        android:id="@+id/layoutBotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="6dp">

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar reporte"
            android:backgroundTint="#1E88E5"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- ðŸ”´ Modal grabaciÃ³n de audio -->
    <FrameLayout
        android:id="@+id/layoutGrabandoAudio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="gone"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_modal"
            android:padding="24dp"
            android:elevation="8dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvRecordingTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnStartRecording"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grabar"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="16dp" />

                <Button
                    android:id="@+id/btnCancelarGrabacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancelar"
                    android:backgroundTint="#F44336"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>

