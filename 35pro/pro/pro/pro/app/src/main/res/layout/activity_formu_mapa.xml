    </HorizontalScrollView>

    <!-- Scroll horizontal de subcategorÃ­as -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:visibility="gone"
        android:id="@+id/scrollClasificatoria">

        <LinearLayout
            android:id="@+id/layoutClasificatoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Luminaria -->
            <LinearLayout
                android:id="@+id/btnLuminarias"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:backgroundTint="#FFC107"
                android:padding="8dp"
                android:background="@drawable/border_bottom_yellow">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/luminaria"
                    android:contentDescription="Luminaria" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LUMINARIA"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Espacios Comunes -->
            <LinearLayout
                android:id="@+id/btnEspaciosComunes"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:backgroundTint="#FFC107"
                android:padding="8dp"
                android:background="@drawable/border_bottom_yellow">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/espacioscomunes"
                    android:contentDescription="Espacios Comunes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ESPACIOS COMUNES"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Mejoras -->
            <LinearLayout
                android:id="@+id/btnMejoras"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:backgroundTint="#FFC107"
                android:padding="8dp"
                android:background="@drawable/border_bottom_yellow">

