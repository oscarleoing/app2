                android:background="@drawable/border_bottom_yellow">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/arbotantes"
                    android:contentDescription="Arbotantes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ARBOTANTES"
