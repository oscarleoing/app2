                android:foreground="?attr/selectableItemBackground"
                android:backgroundTint="#FFC107"
                android:padding="8dp"
                android:background="@drawable/border_bottom_yellow">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
